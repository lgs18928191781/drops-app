{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node", "@intlify/vite-plugin-vue-i18n/client"],
    "plugins": [{
      "name": "@vuedx/typescript-plugin-vue"
    }],
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "node_modules/element-plus/global.d.ts"],
  "exclude": ["node_modules", "dist", "public", "tests"]
}